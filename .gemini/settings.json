{
  "hooks": {
    "AfterAgent": [
      {
        "matcher": "write_file|replace",
        "hooks": [
          {
            "name": "format-file",
            "type": "command",
            "command": "$GEMINI_PROJECT_DIR/.gemini/hooks/format-files.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .gemini/hooks/gsd-check-update.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .gemini/hooks/gsd-context-monitor.js"
          }
        ]
      }
    ]
  },
  "experimental": {
    "enableAgents": true,
    "plan": true
  },
  "statusLine": {
    "type": "command",
    "command": "node .gemini/hooks/gsd-statusline.js"
  }
}
